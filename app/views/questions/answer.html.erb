<% if params[:input] == "I am going to work" %>
  <% coach_answer = "Great!" %>
<% elsif params[:input].include?("?")%>
  <% coach_answer = "Silly question, get dressed and go to work!." %>
<% else coach_answer = "I don't care, get dressed and go to work!" %>
<% end %>

<div class="answer my">
  <p><%= params[:input]%></p>
  <p class="your">-YOU</p>
</div>

<br>

<div class="answer coach">
  <p><%=coach_answer%></p>
  <p class="your">-YOUR COACH</p>
</div>

<%= link_to "Ask another question", ask_path %>
